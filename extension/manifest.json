{
  "manifest_version": 3,
  "name": "Resume buff  ðŸ’ª",
  "version": "1.0",
  "description": "Process PDFs with LinkedIn job descriptions",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://*.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/view/*",
        "https://www.linkedin.com/jobs/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Resume buff ðŸ’ª"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}